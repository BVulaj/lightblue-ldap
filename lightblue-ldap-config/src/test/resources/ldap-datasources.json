{
    "ldap": {
        "type" : "com.redhat.lightblue.config.ldap.LdapDataSourceConfiguration",
        "database" : "name of ldap server",

        "bindableDn" : "uid=admin,dc=example,dc=com",
        "password" : "password",
        "numberOfInitialConnections" : 5,
        "maxNumberOfConnections" : 10,
        "servers" : [
            {
                "host" : "${ldap.host}",
                "port" : "${ldap.port}"
            }
        ]
    }
}
